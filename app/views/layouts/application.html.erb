<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %></title>
  <%= stylesheet_link_tag 'reset' %>
	<%= stylesheet_link_tag 'website' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
	<%= yield :head %>
</head>
<body>
	<div id="header">
		<%= yield :header %>
	</div>
	<div class="wrapper">
		<div id="website-body">
			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>
			<%= yield :body %>
		</div>
	</div>
	<div id="website-footer-wrapper">
		<%= yield :footer %>
	</div>
</body>
</html>
